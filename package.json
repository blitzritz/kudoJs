{
  "name": "kudojs",
  "version": "0.0.1",
  "description": "A utility library to write functional code in Javascript",
  "main": "dist/kudo.js",
  "module": "dist/kudo.mjs",
  "scripts": {
    "test": "cross-env NODE_ENV=test TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' nyc tape --reporter=lcov --require ts-node/register src/**/*.test.ts | tap-spec",
    "build:typescript": "cross-env tsc ./src/index.ts",
    "build:js": "cross-env rollup -c",
    "build": "cross-env rollup -c",
    "precommit": "cross-env lint-staged && npm run test"
  },
  "lint-staged": {
    "*.ts": [
      "prettier-eslint --write",
      "git add"
    ]
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run precommit"
    }
  },
  "nyc": {
    "check-coverage": true,
    "branches": 95,
    "functions": 95,
    "lines": 95,
    "statements": 95,
    "sourceMap": false,
    "instrument": true,
    "all": true,
    "extension": [
      ".ts"
    ],
    "exclude": [
      "src/**/*.test.ts",
      "src/interfaces.ts",
      "dist",
      "node_modules"
    ],
    "reporter": [
      "text-summary",
      "lcov"
    ],
    "require": [
      "ts-node/register"
    ],
    "include": [
      "src/**/*.ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blitzritz/kudojs.git"
  },
  "keywords": [
    "kudojs",
    "functional",
    "programming",
    "fp",
    "javascript"
  ],
  "author": "Ritesh Pillai",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/blitzritz/kudojs/issues"
  },
  "homepage": "https://github.com/blitzritz/kudojs#readme",
  "dependencies": {},
  "devDependencies": {
    "@types/tape": "4.2.31",
    "babel-core": "6.26.0",
    "babel-plugin-external-helpers": "6.22.0",
    "babel-preset-env": "1.6.1",
    "babelrc-rollup": "3.0.0",
    "cross-env": "5.1.3",
    "ghooks": "2.0.2",
    "laws": "0.2.1",
    "lint-staged": "6.1.0",
    "npm-run-all": "4.1.2",
    "nyc": "11.4.1",
    "prettier-eslint-cli": "4.7.0",
    "rollup-plugin-babel": "3.0.3",
    "rollup-plugin-istanbul": "2.0.0",
    "rollup-plugin-typescript2": "0.9.0",
    "tap-spec": "4.1.1",
    "tape": "4.8.0",
    "ts-node": "4.1.0",
    "typescript": "2.6.2"
  }
}
